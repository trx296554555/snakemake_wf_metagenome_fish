##### set minimum snakemake version #####
min_version("7.32.4")

##### set default params #####
configfile: "workflow/config/config.yaml"

#### include rules ####
include: "rules/preprocess.smk"
include: "rules/removeHost.smk"
include: "rules/readsClassify.smk"
include: "rules/getMitogenome.smk"

rule all:
    input:
        "logs/01_check_run.log",
        expand(config["root"] + "/" + config["folder"]["reads_classify"] + "/{sample}.braken",sample=get_run_sample()),
        expand(config["root"] + "/" + config["folder"]["mitogenome"] + "/{individual}/{individual}.result",individual=get_run_individual())
    message:
        """
        Start to run the pipeline. --------------------------------------------------
        """
    log:
        "logs/all.log"
